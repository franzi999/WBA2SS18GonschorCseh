<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<head>
    <title>Lern-Quiz HomeSeite</title>
</head>
<body>
<div class="grid">
    <div id="welcome">
        <h1> Herzlich Willkommen in deinen Profil </h1>
        <hr style="margin-bottom: 20px">
        <p>Lege eine neue Frage an oder starte einen Test</p>
        <div id="choice"></div>
        <div class="button">
            <INPUT type="button" value="Frage" id="addQuestion">
            <INPUT type="button" value="Multiple Choice Frage" id="addMcQuestion">
            <INPUT type="button" value="Test" id="startTest" onClick="parent.location='http://localhost:3001/'">
        </div>
        <hr style="margin-top: 50px">
    </div>
</div>
<script>

    document.getElementById("addQuestion").onclick = function () {
        redirect1();
    }

    function redirect1() {

        const token = localStorage.getItem('token');
        const url = 'http://localhost:3001/home/addQuestion/' + token;
        window.location.replace(url);
    }

    document.getElementById("addMcQuestion").onclick = function () {
        redirect2();
    }

    function redirect2() {

        const token = localStorage.getItem('token');
        const url = 'http://localhost:3001/home/addMcQuestion/' + token;
        window.location.replace(url);
    }




</script>
</body>
</html>