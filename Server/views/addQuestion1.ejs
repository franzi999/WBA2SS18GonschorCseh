<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Neue Textfrage hinzufügen</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />

</head>
<body>
<h1>Frage mit Textantwort anlegen</h1>
<div>
    <label>Frage</label>
    <input type='text' id='questionInput'>
    <label>Antwort</label>
    <input type='text' id='antwortInput'>
    <select id="thema">
        <option value="Mathe">Mathe</option>
        <option value="WBA">WBA</option>
        <option value="CGA">CGA</option>
        <option value="AP1">AP1</option>
    </select>
    <button id='addQuestion'>Hinzufügen</button>
</div>
<script>

    document.getElementById("addQuestion").onclick = function () {
        postQuestion();
    }

    function postQuestion() {

        var obj = {};

        obj["frage"] = document.getElementById("questionInput").value;
        obj["thema"] = document.getElementById("thema").value;
        obj["level"] = "12";
        obj["author"] = "ich";
        obj["antwort"] = document.getElementById("antwortInput").value;

        obj = JSON.stringify(obj);

        console.log(obj);



        var settings = {
            "async": false,
            "crossDomain": true,
            "url": "http://127.0.0.1:3000/addQuestion1",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json",
                "Cache-Control": "no-cache"
            },
            "data": obj
        }

        $.ajax(settings).done(function (response) {
            console.log(response);
        });
    }

</script>
</body>
</html>